<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: -"
        android:textAlignment="center"
        android:textSize="28sp" />

    <Button
        android:id="@+id/bttnDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="edit Date" />

    <GridLayout
        android:id="@+id/glGameScore"
        android:layout_width="383dp"
        android:layout_height="80dp"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTeam1"
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:text="Team 1"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvBlank"
            android:layout_width="81dp"
            android:layout_height="40dp"
            android:text=" "
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvTeam2"
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:text="Team 2"
            android:textAlignment="center"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/etTeam1"
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvColon"
            android:layout_width="81dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text=":"
            android:textAlignment="center"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/etTeam2"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:ems="10"
            android:inputType="number" />

    </GridLayout>

    <Button
        android:id="@+id/bttnTeam1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team1" />

    <Button
        android:id="@+id/bttnTeam2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team2" />

    <Button
        android:id="@+id/bttnRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random" />

</LinearLayout>