<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNamePlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/etGoalDefault"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Goal Default:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/etGoalPenalty"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/etGoalPenalty"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="GoalPenalty:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGoalDefault"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/etGoalHeadSnow"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Goal Head Snow:"
        app:layout_constraintLeft_toLeftOf="@+id/etGoalPenalty"
        app:layout_constraintRight_toRightOf="@+id/etGoalPenalty"
        app:layout_constraintTop_toBottomOf="@+id/etGoalPenalty"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/etGoalOwn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Goal Own:"
        app:layout_constraintLeft_toLeftOf="@+id/etGoalHeadSnow"
        app:layout_constraintRight_toRightOf="@+id/etGoalHeadSnow"
        app:layout_constraintTop_toBottomOf="@+id/etGoalHeadSnow"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="-7dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/etNutmeg"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nutmeg:"
        app:layout_constraintLeft_toLeftOf="@+id/etGoalOwn"
        app:layout_constraintRight_toRightOf="@+id/etGoalOwn"
        app:layout_constraintTop_toBottomOf="@+id/etGoalOwn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/tvGoalDefault"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/tvGoalPenalty"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/tvGoalHeadSnow"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="148dp" />

    <TextView
        android:id="@+id/tvGoalOwn"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/tvNutmeg"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="268dp" />
</android.support.constraint.ConstraintLayout>