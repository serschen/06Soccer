<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="name: "
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txtGoalDefault"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="43dp"
        android:text="Goal Default: "
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txtGoalPenalty"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Goal Penalty: "
        android:textAlignment="textStart"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/txtGoalHead"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Goal Head: "
        android:textAlignment="textStart"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="199dp" />

    <TextView
        android:id="@+id/txtGoalHeadSnow"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Goal Head Snow: "
        android:textAlignment="textStart"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:id="@+id/txtGoalOwn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Goal Own: "
        android:textAlignment="textStart"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/txtNutmeg"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Nutmeg: "
        android:textAlignment="textStart"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="435dp" />

    <TextView
        android:id="@+id/txtViewName"
        android:layout_width="158dp"
        android:layout_height="21dp"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txtViewGoalDefault"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/txtViewGoalPenalty"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/txtViewGoalHead"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="199dp" />

    <TextView
        android:id="@+id/txtViewGoalHeadSnow"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:id="@+id/txtViewGoalOwn"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/txtViewNutmeg"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="435dp" />
</android.support.constraint.ConstraintLayout>